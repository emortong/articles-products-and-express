<h1>Edit Articles</h1>

  <form name="form" action="/articles/{{articles.title}}" method="POST" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="_method" value="PUT">
    Title: <br>
    <input type="text" name="title" value="{{articles.title}}" class="box"><br>
    Body: <br>
    <input type="text" name="body" value="{{articles.body}}" class="box"><br>
    Author: <br>
    <input type="text" name="author" value="{{articles.author}}" class="box"><br>
    <input type="submit" value="Submit" id="submit">
  </form>

